{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env", "**/.env.*"],
  "globalEnv": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL", "JWT_SECRET", "API_PORT", "WEB_PORT"]
    },
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**"
      ],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": ["eslint-report.json"]
    },
    "type-check": {
      "dependsOn": ["^type-check", "generate"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["generate"]
    },
    "generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "push": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "migrate:dev": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "seed": {
      "cache": false,
      "dependsOn": ["generate"],
      "env": ["DATABASE_URL"]
    },
    "studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "DATABASE_URL",
    "REDIS_URL",
    "JWT_SECRET",
    "COOKIE_SECRET",
    "API_PORT",
    "WEB_PORT"
  ]
}